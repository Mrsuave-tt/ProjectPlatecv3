@{
    ViewData["Title"] = "My Profile";
    var student = ViewBag.Student as ProjectPlatec.Models.Student;
}

<h2>My Profile</h2>
<hr />

@if (student != null)
{
    <dl class="row">
        <dt class="col-sm-3">Student ID:</dt>
        <dd class="col-sm-9">@student.StudentId</dd>

        <dt class="col-sm-3">First Name:</dt>
        <dd class="col-sm-9">@student.FirstName</dd>

        <dt class="col-sm-3">Last Name:</dt>
        <dd class="col-sm-9">@student.LastName</dd>

        <dt class="col-sm-3">Email:</dt>
        <dd class="col-sm-9">@student.Email</dd>

        <dt class="col-sm-3">Phone Number:</dt>
        <dd class="col-sm-9">@(student.PhoneNumber ?? "N/A")</dd>

        <dt class="col-sm-3">Date of Birth:</dt>
        <dd class="col-sm-9">@(student.DateOfBirth?.ToString("MM/dd/yyyy") ?? "N/A")</dd>
    </dl>

    <div class="mt-3">
        <a asp-action="ChangePassword" class="btn btn-primary">Change Password</a>
        <a asp-controller="StudentDashboard" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </div>
}

